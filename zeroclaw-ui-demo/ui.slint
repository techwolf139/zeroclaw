export struct Message {
    role: string,
    content: string,
    timestamp: string,
}

// Color Palette: Dark OLED Theme
// Background: #0F172A (slate-900)
// Surface: #1E293B (slate-800)
// Accent: #22C55E (green-500)
// Text: #F8FAFC (slate-50)
// Muted: #64748B (slate-500)

export component StatusBar inherits Rectangle {
    in property <string> status;
    in property <bool> connected;
    in property <int> wifi-signal;
    in property <bool> has-notification: false;
    
    callback clicked();
    
    background: #1E293B;
    
    HorizontalLayout {
        padding-left: 20px;
        padding-right: 20px;
        spacing: 16px;
        alignment: space-between;
        
        Text {
            text: "ZeroClaw";
            color: #22C55E;
            font-size: 24px;
            font-weight: 600;
            vertical-alignment: center;
        }
        
        HorizontalLayout {
            spacing: 16px;
            alignment: end;
            
            Rectangle {
                width: 32px;
                height: 24px;
                VerticalLayout {
                    spacing: 2px;
                    Rectangle { width: 8px; height: 4px; background: root.wifi-signal >= 1 ? #22C55E : #334155; }
                    Rectangle { width: 8px; height: 4px; background: root.wifi-signal >= 2 ? #22C55E : #334155; }
                    Rectangle { width: 8px; height: 4px; background: root.wifi-signal >= 3 ? #22C55E : #334155; }
                }
            }
            
            Rectangle {
                width: 16px;
                height: 16px;
                border-radius: 8px;
                background: root.connected ? #22C55E : #EF4444;
            }
            
            TouchArea {
                width: 48px;
                height: 40px;
                clicked => { root.clicked(); }
                Text {
                    text: "[=]";
                    color: #64748B;
                    font-size: 20px;
                }
            }
            
            if root.has-notification: Rectangle {
                width: 16px;
                height: 16px;
                border-radius: 8px;
                background: #F59E0B;
            }
        }
    }
}

export component MessageList inherits Rectangle {
    in property <[Message]> messages;

    background: #0F172A;

    VerticalLayout {
        spacing: 8px;
        padding: 16px;

        for msg in root.messages: HorizontalLayout {
            alignment: msg.role == "user" ? end : start;

            Rectangle {
                min-width: 200px;
                max-width: 600px;
                min-height: 60px;
                max-height: 120px;
                background: msg.role == "user" ? #334155 : #1E293B;
                border-radius: 12px;
                padding: 12px;

                Text {
                    text: msg.content;
                    color: #F8FAFC;
                    font-size: 16px;
                    wrap: word-wrap;
                }
            }
        }
    }
}

export component InputBar inherits Rectangle {
    in-out property <string> text;

    callback on-send(string);

    background: #1E293B;

    HorizontalLayout {
        padding: 12px;
        spacing: 12px;

        input := TextInput {
            text <=> root.text;
            font-size: 18px;
            height: 48px;
            accepted => {
                if root.text != "" {
                    root.on-send(root.text);
                    root.text = "";
                }
            }
        }

        TouchArea {
            width: 100px;
            height: 48px;
            clicked => {
                if input.text != "" {
                    root.on-send(input.text);
                    root.text = "";
                }
            }
            Rectangle {
                background: #EF4444;
                border-radius: 8px;
                Text {
                    text: "Send";
                    color: white;
                    font-size: 16px;
                }
            }
        }
    }
}

